						"body": {
							"mode": "raw",
							"raw": "{\n    \"user_id\": \"{{userId}}\",\n    \"in_wardrobe\": true,\n    \"name\": \"Summer Casual Look\",\n    \"description\": \"A light and airy outfit perfect for a sunny day.\",\n    \"outfit_image_url\": \"https://example.com/outfit_image.jpg\",\n    \"dress_components\": [\n        {\n            \"dress_id\": \"{{dressId}}\",\n            \"dress_type_id\": 101\n        },\n        {\n            \"dress_id\": \"60d5f1b3b5a7b04f4c8b4568\",\n            \"dress_type_id\": 202\n        }\n    ],\n    \"styling_aesthetics\": [\"casual\", \"bohemian\"],\n    \"composed_by\": \"user\",\n    \"is_favorite\": true,\n    \"tags\": [\"summer\", \"beach-day\"],\n    \"user_preferences\": 1\n}",
