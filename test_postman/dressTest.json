			"value": "your-user-uuid-here",
			"type": "string"
		},
		{
			"key": "wardrobeId",
			"value": "your-wardrobe-uuid-here",
			"type": "string"
		},
		{
			"key": "dressId",
			"value": "",
			"type": "string"
		}
	]
}
